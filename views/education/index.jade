        .booklet
            img(src="/images/gy25.jpeg")
            h1 ماژول GY25
    a(href="/booklets/pixy")
        .booklet
            img(src="/images/pixy.jpg")
            h1 دوربین pixy
    a(href="/booklets/ultrasonic")
        .booklet
            img(src="/images/ultrasonic.jpg")
            h1 سنسورهای Ultrasonic
