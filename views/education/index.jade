extends education_layout

block educations
    h1.title فیلم های آموزشی
    - for(var i=0; i<educations.length; i++){
        a(href=`/education?name=${educations[i].name}`)
            .education-panel
                .text-pad
                    h1.education-title= educations[i].title
                    .item مدرس:‌ #{educations[i].producer}
                    .item تاریخ انتشار:‌ #{educations[i].date}
                    .item تعداد جلسات:‌ #{educations[i].session}
                    .end
                img(src=`/education/${educations[i].picture}`)

    - }
    h1.title.space جزوه های آموزشی
    a(href="/booklets/arm")
        .booklet
            img(src="/images/tutorials/arm.jpg")
