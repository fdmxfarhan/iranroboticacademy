.sign-in-modal#sign-in-modal
    .sign-in
        span.close#signinclose &times;
        form(action="/classes/register" method="POST")
            h1.modal-title ثبت نام کلاس
            label(for="fullname")
                b نام و نام خانوادگی:
            br
            input.input-text(type="text" placeholder="Full name" name="fullname" value="#{user.fullname}" required )
            br
            label(for="term")
                b ترم:
            br
            select.input-text(name="term")
                option(value="بهار") بهار
                option(value="تابستان") تابستان
                option(value="پاییز") پاییز
                option(value="زمستان") زمستان
            br
            label(for="className")
                b نام کلاس:
            br
            select.input-text(name="className")
                option(value="robotic") رباتیک
                option(value="programming") برنامه نویسی
                option(value="programming") کدنویسی کودکان
                option(value="electronic") الکترونیک
            br
            input.submit(type="submit" value="ثبت نام")
        .imgpad
            img(src="/images/walle.png")