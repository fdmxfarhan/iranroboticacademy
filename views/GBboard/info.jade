                        i.fa.fa-download
                    span.function void 
                    span.name setup
                    span.text  () {
                    .scope
                        span.function pinMode 
                        span.text (11, 
                        span.name OUTPUT
                        span.text );
                        br
                        span.function pinMode 
                        span.text (12, 
                        span.name OUTPUT
                        span.text );
                    span.text }
                    br
                    span.function void 
                    span.name loop 
                    span.text () {
                    .scope
                        span.function digitalWrite 
                        span.text (11, 1);
                        br
                        span.function digitalWrite 
                        span.text (12, 0);
                        br
                        span.function delay 
                        span.text (100);
                        br
                        span.function digitalWrite 
                        span.text (11, 0);
                        br
                        span.function digitalWrite 
                        span.text (12, 1);
                        br
                        span.function delay 
                        span.text (100);
                        br
                    span.text }
