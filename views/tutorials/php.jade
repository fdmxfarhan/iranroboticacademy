        -if(uname){
            -if(!php){
                include ../partials/messages.jade
                form(action="/tutorials/php" id="register" method="POST")
                    label(for="uname")
                        b نام کاربری:
                    br
                    input(type="text" placeholder="Username" name="uname" value= "#{ typeof uname != 'undefined' ? uname: '' }")
                    br
                    label(for="email")
                        b پست الکترونیکی:
                    br
                    input(type="email" placeholder="E-mail" name="email" value= "#{ typeof email != 'undefined' ? email: '' }")
                    br
                    label(for="day")
                        b روز کلاس:
                    br
                    select(name="day" value= "#{ typeof day != 'undefined' ? day: '' }")
                        option(value="day1") شنبه
                        option(value="day2") یک شنبه
                        option(value="day3") دو شنبه
                        option(value="day4") سه شنبه
                        option(value="day5") چهار شنبه
                        option(value="day6") پنج شنبه
                        option(value="day7") جمعه
                        
                    br
                    label(for="hour")
                        b ساعت کلاس:
                    br
                    select(name="hour" value= "#{ typeof hour != 'undefined' ? hour: '' }")
                        option(value="hour1") ۱۰ تا ۱۲
                        option(value="hour2") ۱۳ تا ۱۵
                        option(value="hour3") ۱۶ تا ۱۸
                        option(value="hour4") ۱۸ تا ۲۰
                        
                    br
                    button(type="submit") ثبت نام
                    br
            -} else {
                include ../partials/messages.jade
                form(action="/tutorials/php/remove" id="register" method="POST")
                    br
                    button.remove(type="submit") حذف این کلاس
            -}

        -}